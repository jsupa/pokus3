{
	"extends": "@pokus3/config/tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@config": ["./src/config/index.ts"],
			"@server": ["./src/lib/server.ts"],
			"@router": ["./src/config/router.ts"],
			"@middlewares/*": ["./src/middlewares/*.middleware.ts"],
			"@controllers/*": ["./src/controllers/*.controller.ts"],
			"@validations/*": ["./src/validations/*.validation.ts"],
			"@routes/*": ["./src/routes/*.route.ts"],
			"@/*": ["./src/*"]
		},
		"jsx": "react-jsx"
	}
}
