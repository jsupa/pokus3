{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DISCORD_CLIENT_ID", "DISCORD_CLIENT_SECRET"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "check-locales:missing"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "check-locales:missing": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
